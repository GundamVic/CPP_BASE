{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main", // 指定生成的可执行文件路径
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build", // 工作目录为 build 文件夹
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb", // 使用 GDB 调试
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build"
        }
    ]
}